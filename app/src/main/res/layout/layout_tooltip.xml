<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/tooltip_root"
             android:background="@color/tooltip_mask">

    <LinearLayout
        android:id="@+id/tooltip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/tooltip_top_arrow"
            android:layout_width="@dimen/tooltip_arrow_size"
            android:layout_height="@dimen/tooltip_arrow_size_half"
            android:background="@drawable/tooltip_arrow_up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/tooltip_left_arrow"
                android:layout_width="@dimen/tooltip_arrow_size_half"
                android:layout_height="@dimen/tooltip_arrow_size"
                android:background="@drawable/tooltip_arrow_left" />

            <FrameLayout
                android:id="@+id/tooltip_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tooltip_frame" />

            <View
                android:id="@+id/tooltip_right_arrow"
                android:layout_width="@dimen/tooltip_arrow_size_half"
                android:layout_height="@dimen/tooltip_arrow_size"
                android:background="@drawable/tooltip_arrow_right" />

        </LinearLayout>


        <View
            android:id="@+id/tooltip_bottom_arrow"
            android:layout_width="@dimen/tooltip_arrow_size"
            android:layout_height="@dimen/tooltip_arrow_size_half"
            android:background="@drawable/tooltip_arrow_down" />
    </LinearLayout>

</FrameLayout>